{
    "rolloutSpec": {
        "name": "inventory-prod-rolling",
        "microservice": "inventory-service",
        "environment": "prod",
        "strategy": {
            "rolling": {
                "verification": {
                    "phases": [
                        {
                            "initialDelay": "2m",
                            "name": "automation-tests",
                            "externalVerification": {
                                "fallback": "fail",
                                "timeout": "10m"
                            }
                        }
                    ]
                }
            }
        },
        "notification": {
            "providers": [
                "rollouts-webhook"
            ]
        },
        "failurePolicy": {
            "rollback": {
                "mode": "immediate"
            }
        }
    }
}